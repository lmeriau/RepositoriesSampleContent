{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/a0685638-a0e9-11eb-89ea-029778b6f45f')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/a0685638-a0e9-11eb-89ea-029778b6f45f')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2023-02-01-preview",
      "properties": {
        "displayName": "Sensitive File Sharing (via office365) by SOC Prime Team",
        "description": "Share link for possible sensitive file was created. Technique: T1074.",
        "alertDetailsOverride": null,
        "customDetails": null,
        "entityMappings": null,
        "eventGroupingSettings": null,
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "enabled": false,
            "groupByAlertDetails": null,
            "groupByCustomDetails": null,
            "groupByEntities": [],
            "lookbackDuration": "PT5M",
            "matchingMethod": "AllEntities",
            "reopenClosedIncident": false
          }
        },
        "query": "OfficeActivity | where ((Operation == \"SharingInheritanceBroken\" or Operation == \"SharingSet\" or Operation == \"SecureLinkCreated\" or Operation == \"SecureLinkUsed\") and (OfficeObjectId contains \"passwo\" or OfficeObjectId contains \"confide\" or OfficeObjectId contains \"secret\" or OfficeObjectId contains \"finance\" or OfficeObjectId contains \"Cash\" or OfficeObjectId contains \"banking\" or OfficeObjectId contains \"swift\"))",
        "queryPeriod": "PT12H",
        "queryFrequency": "PT12H",
        "sentinelEntitiesMappings": null,
        "severity": "Medium",
        "suppressionDuration": "PT12H",
        "suppressionEnabled": true,
        "tactics": [
          "Collection"
        ],
        "techniques": null,
        "templateVersion": null,
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0,
        "alertRuleTemplateName": null,
        "enabled": true
      }
    }
  ]
}